/* pages/discovery/discovery.wxss */
@import "../common/circle.wxss";
@import './../common/self/index.wxss';

page {
  height: 100%;
}
.page-discovery .search-bar {
  padding: 10rpx 20rpx;
  background-color: #496069;
}
.search-bar .search-radius {
  background-color: #fff;
  border-radius: 1em;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: .8em;
  color: #888;
  padding: .3em 0;
}
.search-bar .search-radius text {
  margin-left: .5em;
}

.page-discovery .content {
  display: flex;
  flex: 1;
}

.slide-image {
  display: block;
  width: 100%;
}
.kind-container {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}
