/* pages/classification/index.wxss */

.classify {
  border-left: 0.1px solid #bbb;
  border-top: 0.1px solid #bbb;
  box-sizing: border-box;
  overflow: hidden;
  zoom: 1;
  margin: 32rpx;
}

.classify .item {
  width: 25%;
  border-right: 0.1px solid #bbb;
  border-bottom: 0.1px solid #bbb;
  box-sizing: border-box;
  float: left;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.classify .item.big {
  height: 4.6em;
  color: #6f93a2;
}

.classify .item .icon {
  width: 2em;
}

.small {
  height: 2.3em;
  overflow: hidden;
}

.small>text {
  max-width: 100%;
}

.classify .item.small:active:not(.empty) {
  background-color: #eee;
}
