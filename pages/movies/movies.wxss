/* pages/movies/movies.wxss */
@import '../common/rating/rating';
@import '../common/movie/movieRow';

page {
  padding-top: 3em;
}

.page-movie .topbar {
  position: fixed;
  width: 100%;
  height: 3em;
  top: 0;
  z-index: 2;
  background-color: #fff;
  border-bottom: 0.5px solid #ccc;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}
.page-movie .topbar .layout {
  width: 1.5em;
}
.page-movie .topbar .layout > image {
  width: 100%;
}

.page-movie .movie-container {
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.page-movie .movie-container>view {
  width: 33.33%;
  display: -ms-inline-grid;
  border: 10rpx solid transparent;
  box-sizing: border-box;
}
